<mvc:View
	controllerName="opensap.manageproducts.ManageProducts.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:semantic="sap.f.semantic"
	xmlns:form="sap.ui.layout.form"
	xmlns:tnt="sap.tnt">

	<semantic:SemanticPage
		id="page"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:titleHeading>
			<Title
				text="Product"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:headerContent>
			<ObjectHeader
				id="objectHeader"
				title = "{ProductID}"
				titleActive="true"
				responsive="true"
				titlePress="onShowDetailPopover">
				<ObjectAttribute 
						text="{Name}" />
				<ObjectAttribute 
					text="{SupplierName}" />
				<ObjectAttribute 
					text="{
						path: 'Price',
						formatter: '.formatter.numberUnit'
					}"/>	
			</ObjectHeader>	
			<ObjectNumber
					number="{
						path: 'Price',
						formatter: '.formatter.numberUnit'
					}"
				unit="{CurrencyCode}"/>	
			<mvc:XMLView viewName="opensap.manageproducts.ManageProducts.view.ProductDetails"/>
			<core:Fragment 
				fragmentName="opensap.manageproducts.ManageProducts.view.SupplierInfo" type="XML"/>
		</semantic:headerContent>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
		</semantic:sendEmailAction>


	</semantic:SemanticPage>

</mvc:View>